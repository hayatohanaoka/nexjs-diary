FROM base AS builder
WORKDIR /app
COPY --from=deps-installer /app/node_modules ./node_modules
COPY . .
RUN npm run build

FROM base AS runner
WORKDIR /app
COPY --from=builder /app/package*.json ./
COPY --from=builder . .
EXPOSE 3000
CMD ["npm", "run", "start"]
